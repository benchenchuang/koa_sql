<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>404</title>
    <link rel="stylesheet" href="/css/amazeui.min.css" />
    <script src="/js/jquery.min.js"></script>
    <style>
        body{
            padding: 0;
            margin: 0;
            background: #f9f9f9;
        }
        .error_page{
            text-align: center;
        }
        .error_page img{
            max-width: 100%;
        }
    </style>
</head>

<body>
    <div class="error_page">
        <img src="/img/404.png">
        <p><span class="count"></span>秒后返回<a href="/admin">[ 首页 ]</a></p>
    </div>
</body>
<script>
    var wait =5;
    var target=$('.count');
    counts(target);
    function counts(target){
        if(wait==1){
            window.location.href="/admin"
        }else{
            wait--;
            target.text(wait);
            setTimeout(function(){
                counts(target)
            },1000)
        };
    }
</script>
</html>